/* pages/bookshelf/bookshelf.wxss */

.edit {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #eff2f7;
  color: #00a37c;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: right;
}

.bigBookBox {
  width: 100%;
}

.van-checkbox {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.thumbnail {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.bookDetailBox {
  height: 240rpx;
  width: 440px;
  max-width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  margin-left: 30rpx;
}

.bookDetailBox view {
  color: #777;
  font-size: 24rpx;
  line-height: 42rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.bookDetailBox view.stock {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  color: #f00;
}

.bookDetailBox view.name {
  color: #333;
  font-size: 28rpx;
  line-height: 60rpx;
}

.boxBlank {
  width: 100%;
  height: 120rpx;
}

.bottomBar {
  width: 100%;
  height: 120rpx;
  border-top: 1px solid #f3f3f3;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.lend {
  width: 350rpx;
  height: 120rpx;
  line-height: 120rpx;
  background: #00a37c;
  text-align: center;
  color: #fff;
  float: right;
  transition: 0.5s;
}

.remove {
  width: 350rpx;
  height: 120rpx;
  line-height: 120rpx;
  background: #ff8900;
  text-align: center;
  color: #fff;
  float: right;
  transition: 0.5s;
}

.bottomWords {
  color: #777;
}
