/* pages/mine/mine.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.mineBg {
  width: 100%;
  height: 220rpx;
  background-image: linear-gradient(#47d9c2, #2da7bd);
  border-radius: 0% 0% 50% 50% / 0 0 100rpx 100rpx;
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
}

.mineBox {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border: 1px solid #fff;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 24rpx rgba(71, 217, 194, 0.2);
  /* box-shadow: 5rpx 5rpx 10rpx red; */
  padding: 40rpx;
  box-sizing: border-box;
}

.myPhotoBox {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
  display: block;
}

.myTip {
  color: #777;
  font-size: 28rpx;
  line-height: 48rpx;
}
