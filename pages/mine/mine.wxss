/* pages/mine/mine.wxss */

.mineBg {
  width: 100%;
  height: 230rpx;
  background-image: linear-gradient(#47d9c2, #2da7bd);
  border-radius: 0 0 100% 100% / 0 0 200rpx 200rpx;
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
}

.mineBox {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border: 1px solid #fff;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 24rpx rgba(71, 217, 194, 0.2);
  /* box-shadow: 5rpx 5rpx 10rpx red; */
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
}

.rightArrow {
  position: absolute;
  right: 30rpx;
  font-size: 36rpx;
  color: #bbb;
}

.myPhotoBox {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
  display: block;
}

.myTip {
  color: #777;
  font-size: 28rpx;
  line-height: 48rpx;
}

.itemBar {
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item {
  padding: 20rpx;
  box-sizing: border-box;
}

.itemImg {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 10rpx auto;
}

.bgLine {
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}

.menuItems {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f5f5f5;
  color: #333;
}

.menuItems i {
  margin-right: 10rpx;
  width: 30rpx;
  color: #47d9c2;
}

.menuItems i.fa.fa-angle-right {
  font-size: 36rpx;
  color: #bbb;
}
