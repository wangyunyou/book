/**app.wxss**/
@import "/path/stylesheet.wxss";

.search {
  width: 90%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  margin: 20rpx auto;
  text-align: center;
}

.titleBox {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.title::before {
  content: " ";
  width: 5rpx;
  height: 30rpx;
  margin-right: 16rpx;
  display: inline-block;
  background: #36b5eb;
}

.titleTip {
  font-size: 28rpx;
  color: #777;
}

.bookBox {
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.bookThumbnailBlank {
  width: 33.33%;
  display: flex;
  align-items: center;
}

.bookThumbnailBlank.start {
  justify-content: flex-start;
}

.bookThumbnailBlank.center {
  justify-content: center;
}

.bookThumbnailBlank.end {
  justify-content: flex-end;
}

.bookThumbnail {
  width: 170rpx;
  height: 340rpx;
  overflow: hidden;
}

.bookImg {
  width: 170rpx;
  height: 240rpx;
}

.bookName {
  width: 170rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 42rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.bookAuthor {
  width: 170rpx;
  color: #777;
  font-size: 24rpx;
  line-height: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

page::before {
  content: '';
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  background-color: #f3f3f3;
  z-index: 9999;
}

.hover {
  background: #fafafa;
}
